<h1>New Beer!!</h1>

<%= form_tag '/beers', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :style %>
    <%= text_field_tag :style %>
  </div>
  <div>
    <%= label_tag :alcohol %>
    <%= text_field_tag :alcohol %>
  </div>
  <%= submit_tag "Create Beer" %>
<% end %>